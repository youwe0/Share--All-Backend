{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node"]
    // "target": "ES2022",
    // "rootDir": "./src",
    // "module": "commonjs",
    // "outDir": "./dist",
    // "moduleResolution": "node",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
